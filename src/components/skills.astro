---
// Skills section
---

<section class="skills" id="skills">
    <h2 class="section-title">SKILLS</h2>

    <div class="skill-items">
        <div class="skill-item">
            <div class="skill-header">
                <h3 class="skill-title">WEB DESING</h3>
                <span class="skill-number">01</span>
            </div>
            <div class="skill-list">
                <p>Visual Storytelling</p>
                <p>Clear Navigation</p>
                <p>Responsive Design</p>
                <p>Modern Layouts</p>
            </div>
        </div>

        <div class="skill-item">
            <div class="skill-header">
                <h3 class="skill-title">CREATIVE DESIGN</h3>
                <span class="skill-number">02</span>
            </div>
            <div class="skill-list">
                <p>Visual Design</p>
                <p>Branding</p>
                <p>Typography</p>
                <p>Visual Identity</p>
                <p>Campaigns</p>
                <p>Motion</p>
            </div>
        </div>

        <div class="skill-item">
            <div class="skill-header">
                <h3 class="skill-title">UX-UI</h3>
                <span class="skill-number">03</span>
            </div>
            <div class="skill-list">
                <p>Problem solving</p>
                <p>Wireframing</p>
                <p>Userflows</p>
                <p>Wireflows & flows</p>
                <p>Prototypes</p>
                <p>Solution making</p>
            </div>
        </div>

        <div class="skill-item">
            <div class="skill-header">
                <h3 class="skill-title">DEVELOPMENT</h3>
                <span class="skill-number">04</span>
            </div>
            <div class="skill-list">
                <p>HTML/CSS</p>
                <p>GSAP</p>
                <p>JS</p>
            </div>
        </div>
    </div>
</section>

<style>
    .skills {
        background: #101010;
        color: #fff;
        padding: 50px 20px;
    }

    .section-title {
        font-family: "Space Grotesk", sans-serif;
        font-size: 72px;
        font-weight: 700;
        margin: 0 0 40px 0;
        letter-spacing: 2px;
        text-align: center;
        color: #fff;
    }

    .skill-items {
        display: flex;
        flex-direction: column;
        gap: 40px;
    }

    .skill-item {
        border-top: 1px solid #fff;
        padding-top: 20px;
    }

    .skill-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .skill-title {
        font-family: "Space Grotesk", sans-serif;
        font-size: 18px;
        font-weight: 600;
        margin: 0;
        letter-spacing: 0.5px;
        color: #fff;
    }

    .skill-number {
        font-family: "Space Grotesk", sans-serif;
        font-size: 18px;
        font-weight: 300;
        color: #999;
    }

    .skill-list {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .skill-list p {
        font-family: "Space Grotesk", sans-serif;
        font-size: 14px;
        font-weight: 400;
        margin: 0;
        text-align: center;
        color: #ccc;
    }

    /* Desktop 4-column grid layout with vertical dividers */
    @media (min-width: 1024px) {
        .skills {
            padding: 80px 0;
        }

        .section-title {
            font-size: 120px;
            margin-bottom: 80px;
        }

        .skill-items {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 0;
            border-top: 1px solid #fff;
        }

        .skill-item {
            border-top: none;
            border-right: 1px solid #fff;
            padding: 40px 30px;
            display: flex;
            flex-direction: column;
        }

        .skill-item:last-child {
            border-right: none;
        }

        .skill-header {
            flex-direction: row;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 40px;
        }

        .skill-title {
            font-size: 22px;
            letter-spacing: 1px;
        }

        .skill-number {
            font-size: 48px;
            color: #444;
        }

        .skill-list {
            gap: 10px;
        }

        .skill-list p {
            font-size: 16px;
            text-align: left;
        }
    }
</style>
