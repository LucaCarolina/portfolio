---
// Skills section
---

<section class="skills">
    <h2 class="section-title">SKILLS</h2>

    <div class="skill-items">
        <div class="skill-item">
            <div class="skill-header">
                <h3 class="skill-title">WEB DESIGN</h3>
                <span class="skill-number">01</span>
            </div>
            <div class="skill-list">
                <p>Visual Storytelling</p>
                <p>Visual Hierarchy</p>
                <p>Brand Identity</p>
                <p>Wireframing</p>
            </div>
        </div>

        <div class="skill-item">
            <div class="skill-header">
                <h3 class="skill-title">CREATIVE DESIGN</h3>
                <span class="skill-number">02</span>
            </div>
            <div class="skill-list">
                <p>Visual Design</p>
                <p>Branding</p>
                <p>Typography</p>
                <p>Color Theory</p>
            </div>
        </div>

        <div class="skill-item">
            <div class="skill-header">
                <h3 class="skill-title">UX/UI</h3>
                <span class="skill-number">03</span>
            </div>
            <div class="skill-list">
                <p>Problem-solving</p>
                <p>User Research</p>
                <p>Information Architecture</p>
                <p>Prototyping</p>
                <p>Testing</p>
            </div>
        </div>

        <div class="skill-item">
            <div class="skill-header">
                <h3 class="skill-title">DEVELOPMENT</h3>
                <span class="skill-number">04</span>
            </div>
            <div class="skill-list">
                <p>HTML/CSS</p>
                <p>JS/TS</p>
                <p>GSAP</p>
            </div>
        </div>
    </div>
</section>

<style>
    .skills {
        background: #000;
        color: #fff;
        padding: 50px 20px;
    }

    .section-title {
        font-family: "Space Grotesk", sans-serif;
        font-size: 32px;
        font-weight: 700;
        margin: 0 0 40px 0;
        letter-spacing: 1px;
    }

    .skill-items {
        display: flex;
        flex-direction: column;
        gap: 40px;
    }

    .skill-item {
        border-top: 1px solid #fff;
        padding-top: 20px;
    }

    .skill-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .skill-title {
        font-family: "Space Grotesk", sans-serif;
        font-size: 18px;
        font-weight: 600;
        margin: 0;
        letter-spacing: 0.5px;
    }

    .skill-number {
        font-family: "Space Grotesk", sans-serif;
        font-size: 18px;
        font-weight: 300;
        color: #999;
    }

    .skill-list {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .skill-list p {
        font-family: "Space Grotesk", sans-serif;
        font-size: 14px;
        font-weight: 400;
        margin: 0;
        text-align: right;
        color: #ccc;
    }
</style>
