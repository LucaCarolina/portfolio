        <button class="menu-btn" id="menuToggle">
            <span></span>
            <span></span>
        </button>
        <!-- Added desktop menu for larger screens -->
        <ul class="desktop-menu">
            <li><a href="/#home" class="desktop-link">HOME</a></li>
            <li><a href="/#about" class="desktop-link">ABOUT ME</a></li>
            <li><a href="/#experience" class="desktop-link">EXPERIENCE</a></li>
            <li><a href="/#works" class="desktop-link">WORKS</a></li>
            <li><a href="/#skills" class="desktop-link">SKILLS</a></li>
            <li><a href="/blogs" class="desktop-link">BLOG</a></li>
            <li><a href="/#contact" class="desktop-link">CONTACT</a></li>
        </ul>
    </div>

    <div class="dropdown-menu" id="dropdownMenu">
        <ul class="menu-list">
            <li><a href="/#home" class="menu-link">HOME</a></li>
            <li><a href="/#about" class="menu-link">ABOUT ME</a></li>
            <li><a href="/#experience" class="menu-link">EXPERIENCE</a></li>
            <li><a href="/#works" class="menu-link">WORKS</a></li>
            <li><a href="/#skills" class="menu-link">SKILLS</a></li>
            <li><a href="/blogs" class="menu-link">BLOG</a></li>
            <li><a href="/#contact" class="menu-link">CONTACT</a></li>
        </ul>
    </div>
</nav>

<style>
    .project-nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        background: #fff;
        z-index: 100;
        border-bottom: 1px solid #e0e0e0;
    }

    .nav-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        position: relative;
        z-index: 102;
        background: #fff;
        /* Added max-width and centering for desktop */
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px 40px;
    }

    .name {
        font-family: "Space Grotesk", sans-serif;
        font-size: 16px;
        font-weight: 500;
        line-height: 1.2;
        letter-spacing: 0.5px;
        color: #000;
        text-decoration: none;
        position: relative;
        z-index: 103;
    }

    /* Added desktop menu styles */
    .desktop-menu {
        display: none;
        list-style: none;
        margin: 0;
        padding: 0;
        gap: 40px;
        align-items: center;
    }

    .desktop-link {
        font-family: "Space Grotesk", sans-serif;
        font-size: 14px;
        font-weight: 400;
        letter-spacing: 0.5px;
        color: #000;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .desktop-link:hover {
        color: rgba(0, 0, 0, 0.5);
    }

    .menu-btn {
        background: none;
        border: none;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        gap: 6px;
        padding: 8px;
        z-index: 103;
        position: relative;
    }

    .menu-btn span {
        display: block;
        width: 24px;
        height: 2px;
        background: #000;
        transition: all 0.3s ease;
    }

    .menu-btn.active span:first-child {
        transform: rotate(45deg);
        position: absolute;
        top: 50%;
        left: 50%;
        margin-left: -12px;
        margin-top: -1px;
    }

    .menu-btn.active span:last-child {
        transform: rotate(-45deg);
        position: absolute;
        top: 50%;
        left: 50%;
        margin-left: -12px;
        margin-top: -1px;
    }

    .dropdown-menu {
        position: fixed;
        top: 61px;
        left: 0;
        right: 0;
        width: 100%;
        height: 50vh;
        background: #fff;
        padding-bottom: 100px;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-20px);
        transition: all 0.3s ease;
        z-index: 101;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow-y: auto;
    }

    .dropdown-menu.active {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    .menu-list {
        list-style: none;
        margin: 0;
        padding: 0;
        text-align: center;
        width: 100%;
    }

    .menu-list li {
        margin: 0;
    }

    .menu-link {
        display: block;
        padding: 15px 30px;
        font-family: "Space Grotesk", sans-serif;
        font-size: 32px;
        font-weight: 500;
        letter-spacing: 1px;
        color: #000;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .menu-link:hover {
        color: rgba(0, 0, 0, 0.5);
    }

    /* Added desktop breakpoint to show desktop menu and hide mobile menu */
    @media (min-width: 768px) {
        .desktop-menu {
            display: flex;
        }

        .menu-btn {
            display: none;
        }

        .dropdown-menu {
            display: none;
        }
    }
</style>

<script>
    const menuToggle = document.getElementById("menuToggle");
    const dropdownMenu = document.getElementById("dropdownMenu");
    const menuLinks = document.querySelectorAll(".menu-link");

    menuToggle?.addEventListener("click", () => {
        menuToggle.classList.toggle("active");
        dropdownMenu?.classList.toggle("active");
    });

    document.addEventListener("click", (e) => {
        if (
            !menuToggle?.contains(e.target as Node) &&
            !dropdownMenu?.contains(e.target as Node)
        ) {
            menuToggle?.classList.remove("active");
            dropdownMenu?.classList.remove("active");
        }
    });

    menuLinks.forEach((link) => {
        link.addEventListener("click", () => {
            menuToggle?.classList.remove("active");
            dropdownMenu?.classList.remove("active");
        });
    });
</script>
