---
// Hero section with creative typography
---

<section class="hero">
    <div class="header">
        <div class="name">CAROLINA<br />LUCA</div>
        <button class="menu-btn">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>

    <div class="hero-image">
        <img src="/img/intro.png" alt="Carolina Lima" />
    </div>

    <div class="creative-grid">
        <div class="grid-letters">
            <span>C</span>
            <span>R</span>
            <span>E</span>
            <span>A</span>
            <span>T</span>
            <span>I</span>
            <span>V</span>
            <span>E</span>
        </div>
        <div class="grid-letters">
            <span>D</span>
            <span>E</span>
            <span>S</span>
            <span>I</span>
            <span>G</span>
            <span>N</span>
            <span>E</span>
            <span>R</span>
        </div>
    </div>

    <div class="subtitle">
        <p class="devine-student">Devine Student 23'</p>
    </div>
</section>

<style>
    .hero {
        background: #000;
        color: #fff;
        padding: 20px;
        position: relative;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 30px;
    }

    .name {
        font-family: "Space Grotesk", sans-serif;
        font-size: 16px;
        font-weight: 500;
        line-height: 1.2;
        letter-spacing: 0.5px;
    }

    .menu-btn {
        background: none;
        border: none;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        gap: 4px;
        padding: 0;
    }

    .menu-btn span {
        display: block;
        width: 24px;
        height: 2px;
        background: #fff;
    }

    .hero-image {
        width: 100%;
        margin: 30px 0;
        position: relative;
    }

    .hero-image img {
        width: 100%;
        height: auto;
        display: block;
    }

    .creative-grid {
        display: flex;
        flex-direction: column;
        gap: 0;
        margin: 30px 0;
    }

    .grid-letters {
        display: grid;
        grid-template-columns: repeat(8, 1fr);
        gap: 0;
        border-top: 1px solid #fff;
    }

    .grid-letters:last-child {
        border-bottom: 1px solid #fff;
    }

    .grid-letters span {
        font-family: "Space Grotesk", sans-serif;
        font-size: 24px;
        font-weight: 500;
        text-align: center;
        padding: 15px 0;
        border-right: 1px solid #fff;
    }

    .grid-letters span:first-child {
        border-left: 1px solid #fff;
    }

    .subtitle {
        text-align: center;
        margin-top: 20px;
    }

    .devine-student {
        font-family: "Helvetica", sans-serif;
        font-size: 14px;
        font-weight: 300;
        letter-spacing: 0.5px;
        margin: 0;
    }
</style>
