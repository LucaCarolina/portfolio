<style>
    .hero {
        background: #fff;
        color: #000;
        position: relative;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        background: #fff;
        padding: 20px;
        z-index: 1002;
    }

    .name {
        font-family: "Space Grotesk", sans-serif;
        font-size: 16px;
        font-weight: 500;
        line-height: 1.2;
        letter-spacing: 0.5px;
        color: #000;
    }

    /* Fixed menu button so X is fully visible */
    .menu-btn {
        background: none;
        border: none;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        gap: 6px;
        padding: 8px;
        z-index: 1003;
        position: relative;
    }

    .menu-btn span {
        display: block;
        width: 24px;
        height: 2px;
        background: #000;
        transition: all 0.3s ease;
    }

    /* Updated X button animation for 2 spans - rotate both lines to form X */
    .menu-btn.active span:first-child {
        transform: rotate(45deg);
        position: absolute;
        top: 50%;
        left: 50%;
        margin-left: -12px;
        margin-top: -1px;
    }

    .menu-btn.active span:last-child {
        transform: rotate(-45deg);
        position: absolute;
        top: 50%;
        left: 50%;
        margin-left: -12px;
        margin-top: -1px;
    }

    /* Fixed dropdown to be white background, cover full width, and sit below header */
    .dropdown-menu {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        width: 100%;
        height: 50vh;
        background: #fff;
        padding-top: 80px;
        padding-bottom: 100px; /* Increased padding-bottom for more white space below CONTACT */
        opacity: 0;
        visibility: hidden;
        transform: translateY(-20px);
        transition: all 0.3s ease;
        z-index: 1001;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow-y: auto;
    }

    .dropdown-menu.active {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    .menu-list {
        list-style: none;
        margin: 0;
        padding: 0;
        text-align: center;
        width: 100%;
    }

    .menu-list li {
        margin: 0;
    }

    /* Black text on white background with proper spacing */
    .menu-link {
        display: block;
        padding: 15px 30px;
        font-family: "Space Grotesk", sans-serif;
        font-size: 32px;
        font-weight: 500;
        letter-spacing: 1px;
        color: #000;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .menu-link:hover {
        color: rgba(0, 0, 0, 0.5);
    }

    .hero-image-wrapper {
        position: relative;
        width: 100%;
        margin: 20px 0 0;
    }

    .hero-image {
        width: 100%;
        height: auto;
        display: block;
    }

    .creative-grid {
        position: absolute;
        top: 70%;
        transform: translateY(-50%);
        left: 0;
        right: 0;
        display: flex;
        flex-direction: column;
    }

    .grid-row {
        display: grid;
        grid-template-columns: repeat(8, 1fr);
        border-top: 1px solid #000;
    }

    .grid-row:last-child {
        border-bottom: 1px solid #000;
    }

    .grid-cell {
        font-family: "Space Grotesk", sans-serif;
        font-size: 40px;
        font-weight: 500;
        text-align: center;
        padding: 12px 0;
        border-right: 1px solid #000;
        background: rgba(0, 0, 0, 0.6);
        color: #fff;
    }

    .grid-cell:first-child {
        border-left: 1px solid #000;
    }

    .grid-cell.empty {
        background: transparent;
    }

    .subtitle {
        text-align: center;
        margin-top: 30px;
    }

    .devine-student {
        font-family: "Helvetica", Arial, sans-serif;
        font-size: 14px;
        font-weight: 300;
        letter-spacing: 1px;
        margin: 0;
    }

    .intro-text {
        text-align: center;
        max-width: 600px;
        margin: 30px auto 0;
        padding: 0 20px;
        margin-bottom: 60px;
    }

    .intro-p {
        font-family: "Space Grotesk", sans-serif;
        font-size: 16px;
        font-weight: 300;
        line-height: 1.6;
        margin: 0;
        color: #000;
    }
</style>

<!-- Added JavaScript for dropdown toggle and smooth scrolling -->
<script>
    const menuToggle = document.getElementById("menuToggle");
    const dropdownMenu = document.getElementById("dropdownMenu");
    const menuLinks = document.querySelectorAll(".menu-link");

    // Toggle dropdown menu
    menuToggle?.addEventListener("click", () => {
        menuToggle.classList.toggle("active");
        dropdownMenu?.classList.toggle("active");
    });

    // Close menu when clicking outside
    document.addEventListener("click", (e) => {
        if (
            !menuToggle?.contains(e.target as Node) &&
            !dropdownMenu?.contains(e.target as Node)
        ) {
            menuToggle?.classList.remove("active");
            dropdownMenu?.classList.remove("active");
        }
    });

    // Smooth scroll to sections and close menu
    menuLinks.forEach((link) => {
        link.addEventListener("click", (e) => {
            e.preventDefault();
            const href = link.getAttribute("href");

            if (href === "#home") {
                window.scrollTo({ top: 0, behavior: "smooth" });
            } else {
                const targetId = href?.slice(1);
                const targetSection = document.getElementById(targetId || "");

                if (targetSection) {
                    const headerHeight = 60; // Account for fixed header
                    const targetPosition =
                        targetSection.offsetTop - headerHeight;
                    window.scrollTo({
                        top: targetPosition,
                        behavior: "smooth",
                    });
                }
            }

            // Close menu after clicking
            menuToggle?.classList.remove("active");
            dropdownMenu?.classList.remove("active");
        });
    });
</script>
