---
// Hero section with creative typography
import Navigation from "./navigation.astro";
---

<Navigation />

<section class="hero">
    <!-- Added decorative corner lines -->
    <div class="corner-line corner-top-left"></div>
    <div class="corner-line corner-top-right"></div>
    <div class="corner-line corner-bottom-left"></div>
    <div class="corner-line corner-bottom-right"></div>

    <div class="hero-image-wrapper">
        <img src="/img/intro.png" alt="Carolina Luca" class="hero-image" />

        <div class="creative-grid">
            <div class="grid-row">
                <!-- Added data-letter attributes to store correct letters -->
                <div class="grid-cell" data-letter="C">C</div>
                <div class="grid-cell" data-letter="R">R</div>
                <div class="grid-cell" data-letter="E">E</div>
                <div class="grid-cell" data-letter="A">A</div>
                <div class="grid-cell" data-letter="T">T</div>
                <div class="grid-cell" data-letter="I">I</div>
                <div class="grid-cell" data-letter="V">V</div>
                <div class="grid-cell" data-letter="E">E</div>
            </div>
            <div class="grid-row">
                <div class="grid-cell" data-letter="D">D</div>
                <div class="grid-cell" data-letter="E">E</div>
                <div class="grid-cell" data-letter="S">S</div>
                <div class="grid-cell" data-letter="I">I</div>
                <div class="grid-cell" data-letter="G">G</div>
                <div class="grid-cell" data-letter="N">N</div>
                <div class="grid-cell" data-letter="E">E</div>
                <div class="grid-cell" data-letter="R">R</div>
            </div>
        </div>
    </div>

    <div class="subtitle">
        <p class="devine-student">Devine Student 27'</p>
    </div>

    <div class="intro-text">
        <p class="intro-p">
            I'm Carolina â€” a hybrid designer weaving technology and creativity
            to shape unique, interactive digital experiences.
        </p>
    </div>
</section>

<style>
    .hero {
        background: #fff;
        color: #000;
        position: relative;
        padding-top: 60px;
        /* Added min-height for better spacing */
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    /* Added decorative corner lines styling */
    .corner-line {
        position: absolute;
        background: #000;
    }

    /* Moved top lines lower and bottom lines higher */
    .corner-top-left,
    .corner-top-right {
        top: 140px;
        width: 400px;
        height: 2px;
    }

    .corner-top-left {
        left: 0;
    }

    .corner-top-right {
        right: 0;
    }

    .corner-bottom-left,
    .corner-bottom-right {
        bottom: 140px;
        width: 400px;
        height: 2px;
    }

    .corner-bottom-left {
        left: 0;
    }

    .corner-bottom-right {
        right: 0;
    }

    /* Hide corner lines on mobile */
    @media (max-width: 767px) {
        .corner-line {
            display: none;
        }
    }

    /* Made hero content centered on desktop */
    .hero-image-wrapper {
        position: relative;
        width: 100%;
        margin: 20px 0 0;
    }

    @media (min-width: 768px) {
        .hero-image-wrapper {
            /* Adjusted max-width for better proportions matching the design */
            max-width: 450px;
            margin: 0 auto;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    }

    .hero-image {
        width: 100%;
        height: auto;
        display: block;
        /* Added shadow for depth */
        filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.3));
    }

    .creative-grid {
        position: absolute;
        top: 70%;
        transform: translateY(-50%);
        left: 0;
        right: 0;
        display: flex;
        flex-direction: column;
    }

    .grid-row {
        display: grid;
        grid-template-columns: repeat(8, 1fr);
        border-top: 1px solid #000;
    }

    .grid-row:last-child {
        border-bottom: 1px solid #000;
    }

    .grid-cell {
        font-family: "Space Grotesk", sans-serif;
        font-size: 40px;
        font-weight: 500;
        text-align: center;
        padding: 12px 0;
        border-right: 1px solid #000;
        /* Adjusted background opacity for better match */
        background: rgba(180, 180, 180, 0.7);
        color: #000;
    }

    /* Made grid cells smaller on desktop for proportional sizing */
    @media (min-width: 768px) {
        .grid-cell {
            font-size: 24px;
            padding: 8px 0;
        }
    }

    .grid-cell:first-child {
        border-left: 1px solid #000;
    }

    .grid-cell.empty {
        background: transparent;
    }

    .subtitle {
        text-align: center;
        /* Adjusted margin for better spacing */
        margin-top: 40px;
    }

    .devine-student {
        font-family: "Helvetica", Arial, sans-serif;
        /* Increased font size slightly */
        font-size: 16px;
        font-weight: 300;
        /* Added italic style to match the design */
        font-style: italic;
        letter-spacing: 1px;
        margin: 0;
    }

    .intro-text {
        text-align: center;
        max-width: 600px;
        /* Adjusted margins for better spacing */
        margin: 50px auto 0;
        padding: 0 20px;
        margin-bottom: 80px;
    }

    .intro-p {
        font-family: "Space Grotesk", sans-serif;
        font-size: 16px;
        font-weight: 300;
        line-height: 1.6;
        margin: 0;
        color: #000;
    }
</style>

<!-- Added script to animate letter shuffling -->
<script>
    const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
    const cells = document.querySelectorAll(".grid-cell");
    const intervalTime = 50; // Update every 50ms

    cells.forEach((cell, index) => {
        const correctLetter = cell.getAttribute("data-letter");
        // Stagger the stop time for each letter (100ms apart)
        const stopTime = 1500 + index * 100; // Start stopping at 1.5s, each letter 100ms after the previous
        let elapsed = 0;

        const interval = setInterval(() => {
            elapsed += intervalTime;

            if (elapsed >= stopTime) {
                // Set to correct letter and stop
                cell.textContent = correctLetter;
                clearInterval(interval);
            } else {
                // Show random letter
                const randomLetter =
                    letters[Math.floor(Math.random() * letters.length)];
                cell.textContent = randomLetter;
            }
        }, intervalTime);
    });
</script>
