---
// Contact Me section
---

<section class="contact">
    <h2 class="section-title">CONTACT ME</h2>

    <div class="contact-links">
        <a
            href="https://instagram.com"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
        >
            <span>INSTAGRAM</span>
            <svg
                class="arrow-icon"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    d="M7 17L17 7M17 7H7M17 7V17"
                    stroke="white"
                    stroke-width="2"></path>
            </svg>
        </a>

        <a
            href="https://linkedin.com"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
        >
            <span>LINKEDIN</span>
            <svg
                class="arrow-icon"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    d="M7 17L17 7M17 7H7M17 7V17"
                    stroke="white"
                    stroke-width="2"></path>
            </svg>
        </a>

        <a
            href="https://behance.net"
            target="_blank"
            rel="noopener noreferrer"
            class="contact-link"
        >
            <span>BEHANCE</span>
            <svg
                class="arrow-icon"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    d="M7 17L17 7M17 7H7M17 7V17"
                    stroke="white"
                    stroke-width="2"></path>
            </svg>
        </a>

        <a
            href="mailto:carolina.lieja@student.howest.be"
            class="contact-link email-link"
        >
            <span>EMAIL: carolina.luca@student.howest.be</span>
        </a>
    </div>
</section>

<style>
    .contact {
        background: #000;
        color: #fff;
        padding: 50px 20px 60px;
    }

    .section-title {
        font-family: "Space Grotesk", sans-serif;
        font-size: 32px;
        font-weight: 700;
        margin: 0 0 40px 0;
        letter-spacing: 1px;
    }

    .contact-links {
        display: flex;
        flex-direction: column;
        gap: 0;
    }

    .contact-link {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 0;
        border-top: 1px solid #333;
        text-decoration: none;
        color: #fff;
        font-family: "Space Grotesk", sans-serif;
        font-size: 16px;
        font-weight: 500;
        letter-spacing: 0.5px;
        transition: opacity 0.2s;
    }

    .contact-link:last-child {
        border-bottom: 1px solid #333;
    }

    .contact-link:hover {
        opacity: 0.7;
    }

    .email-link {
        font-size: 14px;
        font-weight: 400;
    }

    .arrow-icon {
        flex-shrink: 0;
    }
</style>
