<style>
    .contact {
        background: #101010;
        color: #fff;
        padding: 50px 20px 60px;
    }

    .top-border {
        display: none;
    }

    .title-border {
        display: none;
    }

    .section-title {
        font-family: "Space Grotesk", sans-serif;
        font-size: 60px;
        font-weight: 700;
        margin: 0 0 40px 0;
        letter-spacing: 2px;
        text-align: center;
        white-space: nowrap;
    }

    .contact-links {
        display: flex;
        flex-direction: column;
        gap: 0;
    }

    .contact-link {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 0;
        border-top: 1px solid #333;
        text-decoration: none;
        color: #fff;
        font-family: "Space Grotesk", sans-serif;
        font-size: 16px;
        font-weight: 500;
        letter-spacing: 0.5px;
        transition: opacity 0.2s;
    }

    .contact-link:last-child {
        border-bottom: 1px solid #333;
    }

    .contact-link:hover {
        opacity: 0.7;
    }

    .email-link {
        font-weight: 400;
    }

    .arrow-icon {
        flex-shrink: 0;
    }

    .copyright {
        font-family: "Space Grotesk", sans-serif;
        font-size: 12px;
        color: #666;
        margin: 40px 0 0;
        text-align: center;
    }

    @media (min-width: 768px) {
        .contact {
            padding: 80px 60px 80px;
        }

        .top-border {
            display: block;
            width: 100%;
            height: 2px;
            background: #fff;
            margin: 0 0 60px 0;
        }

        .section-title {
            font-size: 80px;
            margin: 0 auto 30px;
            text-align: center;
            display: block;
            width: 100%;
        }

        .contact-links {
            max-width: 1200px;
            margin: 0 auto;
        }

        .contact-link {
            padding: 30px 0;
            border-top: 1px solid #333;
            font-size: 18px;
        }

        .contact-link:last-child {
            border-top: 1px solid #333;
        }

        .copyright {
            font-size: 14px;
            margin: 60px 0 0;
        }
    }
</style>
