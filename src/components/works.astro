---
// Works section
---

<section class="works" id="works">
    <h2 class="section-title">WORKS</h2>

    <div class="work-items">
        <a href="/projects/thrive" class="work-item">
            <div class="work-header">
                <div>
                    <h3 class="work-title">THRIVE</h3>
                    <p class="work-subtitle">Digital Campaign</p>
                </div>
                <svg
                    class="arrow-icon"
                    width="40"
                    height="40"
                    viewBox="0 0 40 40"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M10 30L30 10M30 10H10M30 10V30"
                        stroke="black"
                        stroke-width="2"></path>
                </svg>
            </div>
            <div class="work-image">
                <img src="/img/thrive.png" alt="Thrive Project" />
            </div>
        </a>

        <a href="/projects/workshop" class="work-item">
            <div class="work-header">
                <div>
                    <h3 class="work-title">SURVIVAL WORKSHOP</h3>
                    <p class="work-subtitle">UX / UI</p>
                </div>
                <svg
                    class="arrow-icon"
                    width="40"
                    height="40"
                    viewBox="0 0 40 40"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M10 30L30 10M30 10H10M30 10V30"
                        stroke="black"
                        stroke-width="2"></path>
                </svg>
            </div>
            <div class="work-image">
                <img src="/img/workshop.png" alt="Survival Workshop" />
            </div>
        </a>

        <a href="/projects/underwhere" class="work-item">
            <div class="work-header">
                <div>
                    <h3 class="work-title">THE UNDERWHERE</h3>
                    <p class="work-subtitle">Story Telling</p>
                </div>
                <svg
                    class="arrow-icon"
                    width="40"
                    height="40"
                    viewBox="0 0 40 40"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M10 30L30 10M30 10H10M30 10V30"
                        stroke="black"
                        stroke-width="2"></path>
                </svg>
            </div>
            <div class="work-image">
                <img src="/img/underwhere.png" alt="Survival Workshop Story" />
            </div>
        </a>
    </div>
</section>

<style>
    .works {
        background: #fff;
        color: #000;
        padding: 0px 20px;
    }

    .section-title {
        font-family: "Space Grotesk", sans-serif;
        font-size: 72px;
        font-weight: 700;
        margin: 0 0 40px 0;
        letter-spacing: 1px;
    }

    .work-items {
        display: flex;
        flex-direction: column;
        gap: 40px;
    }

    .work-item {
        display: flex;
        flex-direction: column;
        gap: 20px;
        text-decoration: none;
        color: inherit;
        cursor: pointer;
        transition:
            transform 0.3s ease,
            opacity 0.3s ease;
    }

    .work-item:hover {
        transform: translateY(-4px);
    }

    .work-item:hover .arrow-icon {
        transform: translate(4px, -4px);
    }

    .arrow-icon {
        flex-shrink: 0;
        transition: transform 0.3s ease;
    }

    .arrow-icon path {
        stroke: #000;
    }

    .work-image {
        width: 100%;
        height: auto;
        overflow: hidden;
        border-radius: 8px;
    }

    .work-image img {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.3s ease;
    }

    .work-item:hover .work-image img {
        transform: scale(1.02);
    }
</style>
