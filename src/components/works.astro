---
// Works section
---

<section class="works">
    <h2 class="section-title">WORKS</h2>

    <div class="work-items">
        <div class="work-item">
            <div class="work-header">
                <div>
                    <h3 class="work-title">THRIVE</h3>
                    <p class="work-subtitle">Digital Campaign</p>
                </div>
                <svg
                    class="arrow-icon"
                    width="40"
                    height="40"
                    viewBox="0 0 40 40"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M10 30L30 10M30 10H10M30 10V30"
                        stroke="white"
                        stroke-width="2"></path>
                </svg>
            </div>
            <div class="work-image">
                <img src="/img/thrive.png" alt="Thrive Project" />
            </div>
        </div>

        <div class="work-item">
            <div class="work-header">
                <div>
                    <h3 class="work-title">SURVIVAL WORKSHOP</h3>
                    <p class="work-subtitle">UX / UI</p>
                </div>
                <svg
                    class="arrow-icon"
                    width="40"
                    height="40"
                    viewBox="0 0 40 40"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M10 30L30 10M30 10H10M30 10V30"
                        stroke="white"
                        stroke-width="2"></path>
                </svg>
            </div>
            <div class="work-image">
                <img src="/img/workshop.png" alt="Survival Workshop" />
            </div>
        </div>

        <div class="work-item">
            <div class="work-header">
                <div>
                    <h3 class="work-title">SURVIVAL WORKSHOP</h3>
                    <p class="work-subtitle">Story Telling</p>
                </div>
                <svg
                    class="arrow-icon"
                    width="40"
                    height="40"
                    viewBox="0 0 40 40"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M10 30L30 10M30 10H10M30 10V30"
                        stroke="white"
                        stroke-width="2"></path>
                </svg>
            </div>
            <div class="work-image">
                <img src="/img/underwhere.png" alt="Survival Workshop Story" />
            </div>
        </div>
    </div>
</section>

<style>
    .works {
        background: #000;
        color: #fff;
        padding: 0px 20px;
    }

    .section-title {
        font-family: "Space Grotesk", sans-serif;
        font-size: 72px;
        font-weight: 700;
        margin: 0 0 40px 0;
        letter-spacing: 1px;
    }

    .work-items {
        display: flex;
        flex-direction: column;
        gap: 40px;
    }

    .work-item {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .work-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .work-title {
        font-family: "Space Grotesk", sans-serif;
        font-size: 24px;
        font-weight: 600;
        margin: 0 0 5px 0;
        letter-spacing: 0.5px;
    }

    .work-subtitle {
        font-family: "Space Grotesk", sans-serif;
        font-size: 14px;
        font-weight: 400;
        margin: 0;
        color: #999;
    }

    .arrow-icon {
        flex-shrink: 0;
    }

    .work-image {
        width: 100%;
        height: auto;
        overflow: hidden;
        border-radius: 8px;
    }

    .work-image img {
        width: 100%;
        height: auto;
        display: block;
    }
</style>
