---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Navigation from "../../components/navigation.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
    const blogs = await getCollection("blogs");
    console.log(
        "[v0] Blog static paths:",
        blogs.map((b) => ({ slug: b.id, title: b.data.title })),
    );
    return blogs.map((blog) => ({
        params: { slug: blog.id.replace(".md", "") },
        props: { blog },
    }));
}

const { blog } = Astro.props;
console.log("[v0] Rendering blog:", blog.id, blog.data.title);
const { Content } = await render(blog);
---

<BaseLayout pageTitle={`${blog.data.title} - Carolina Lima`}>
    <Navigation />

    <article class="blog-post">
        <div class="container">
            <header class="post-header">
                <time class="post-date">{blog.data.date}</time>
                <h1 class="post-title">{blog.data.title}</h1>
            </header>

            <div class="post-content">
                <Content />
            </div>

            <footer class="post-footer">
                <a href="/blogs" class="back-link">‚Üê Back to all posts</a>
            </footer>
        </div>
    </article>
</BaseLayout>

<style>
    .blog-post {
        min-height: 100vh;
        padding: 120px 20px 80px;
        background: #fff;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
    }

    .post-header {
        margin-bottom: 48px;
    }

    .post-date {
        font-family: "Space Grotesk", sans-serif;
        font-size: 14px;
        font-weight: 400;
        color: rgba(0, 0, 0, 0.5);
        display: block;
        margin-bottom: 16px;
    }

    .post-title {
        font-family: "Space Grotesk", sans-serif;
        font-size: 48px;
        font-weight: 600;
        line-height: 1.2;
        color: #000;
        margin: 0;
    }

    .post-content {
        font-family: "Space Grotesk", sans-serif;
        font-size: 18px;
        font-weight: 400;
        line-height: 1.7;
        color: rgba(0, 0, 0, 0.8);
    }

    .post-content :global(h2) {
        font-size: 32px;
        font-weight: 600;
        margin-top: 48px;
        margin-bottom: 24px;
        color: #000;
    }

    .post-content :global(h3) {
        font-size: 24px;
        font-weight: 600;
        margin-top: 36px;
        margin-bottom: 16px;
        color: #000;
    }

    .post-content :global(p) {
        margin-bottom: 24px;
    }

    /* Added styles for bold text, lists, and other markdown elements */
    .post-content :global(strong) {
        font-weight: 600;
        color: #000;
    }

    .post-content :global(em) {
        font-style: italic;
    }

    .post-content :global(ul),
    .post-content :global(ol) {
        margin-bottom: 24px;
        padding-left: 32px;
    }

    .post-content :global(ul) {
        list-style-type: disc;
    }

    .post-content :global(ol) {
        list-style-type: decimal;
    }

    .post-content :global(li) {
        margin-bottom: 12px;
        line-height: 1.7;
    }

    .post-content :global(li strong) {
        font-weight: 600;
        color: #000;
    }

    .post-content :global(code) {
        font-family: "Courier New", monospace;
        background: rgba(0, 0, 0, 0.05);
        padding: 2px 6px;
        border-radius: 3px;
        font-size: 0.9em;
    }

    .post-content :global(pre) {
        background: rgba(0, 0, 0, 0.05);
        padding: 16px;
        border-radius: 8px;
        overflow-x: auto;
        margin-bottom: 24px;
    }

    .post-content :global(pre code) {
        background: none;
        padding: 0;
    }

    .post-content :global(blockquote) {
        border-left: 4px solid #000;
        padding-left: 20px;
        margin: 24px 0;
        color: rgba(0, 0, 0, 0.7);
        font-style: italic;
    }

    .post-content :global(a) {
        color: #000;
        text-decoration: underline;
        transition: opacity 0.2s ease;
    }

    .post-content :global(a:hover) {
        opacity: 0.7;
    }

    .post-footer {
        margin-top: 64px;
        padding-top: 32px;
        border-top: 1px solid #e0e0e0;
    }

    .back-link {
        font-family: "Space Grotesk", sans-serif;
        font-size: 16px;
        font-weight: 500;
        color: #000;
        text-decoration: none;
        transition: opacity 0.2s ease;
    }

    .back-link:hover {
        opacity: 0.7;
    }

    @media (max-width: 768px) {
        .blog-post {
            padding: 100px 20px 60px;
        }

        .post-title {
            font-size: 36px;
        }

        .post-content {
            font-size: 16px;
        }

        .post-content :global(h2) {
            font-size: 28px;
        }

        .post-content :global(h3) {
            font-size: 20px;
        }
        
        /* Added responsive styles for lists */
        .post-content :global(ul),
        .post-content :global(ol) {
            padding-left: 24px;
        }
    }
</style>
